<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:id="@+id/ivBackgroudbanner"/>
    <View
        android:background="@drawable/custom_background_banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_alignBottom="@id/ivBackgroudbanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/ivbanner"
            android:padding="2dp"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
        <TextView
            android:textSize="17sp"
            android:text="lo yeu mat roi"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/tvTitlebannerbaihat"
            android:layout_toRightOf="@id/ivbanner"
            android:layout_alignTop="@id/ivbanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>
        <RelativeLayout
            android:layout_toRightOf="@id/ivbanner"
            android:layout_marginTop="7dp"
            android:layout_below="@id/tvTitlebannerbaihat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvnoidung"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:layout_marginRight="40dp"
                android:maxLines="2"
                android:text="chao ban den voi ca khuc moi cua ca si hot hit hien nay"
                />
        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>